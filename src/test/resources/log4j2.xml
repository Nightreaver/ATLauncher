<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN" packages="com.atlauncher.log4j2">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] %m%n"/>
        </Console>
        <RollingFile name="File" fileName="logs/ATLauncher.log" filePattern="logs/ATLauncher.log" ignoreExceptions="false">
            <PatternLayout pattern="[%d{HH:mm:ss}] %m%n"/>
            <TimeBasedTriggeringPolicy/>
        </RollingFile>
        <ATLauncher-Console/>
    </appenders>
    <loggers>
        <root level="all">
            <appender-ref ref="Console"/>
            <appender-ref ref="ATLauncher-Console"/>
        </root>
    </loggers>
</configuration>